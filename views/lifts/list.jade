h2= title

ul
  each lift, i in lifts
    li
      #{lift.from.city}, #{lift.to.city}, #{moment(lift.date).format('DD/MM/YYYY HH:mm')}, #{lift.time_flexibility}
      a(href='/lifts/#{lift._id}', title='Show lift', style='margin: 5px') Show
      a(href='/lifts/#{lift._id}/edit', title='Edit lift', style='margin: 5px') Edit
      a(href='/lifts/#{lift._id}/delete', title='Delete lift', style='margin: 5px',
             onClick='if (!confirm("Confirm deletion?")) return false;') Delete

div
  a(href='/lifts/new', title='New lift') New
div
  a(href='/search', title='New lift') Search